<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>

  <link rel="stylesheet" href="/bootstrap-icons/bootstrap-icons.css">
  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
  <link rel="stylesheet" href="/stylesheets/styles.css">

</head>

<body>
  <div class="container mt-5">
    <h1 class="mb-4">
      <%= title %>
    </h1>
    <p>There are <strong>
        <%= customers.length %>
      </strong> registered customers.</p>

    <table class="table table-striped table-bordered mt-3">
      <thead class="table-dark">
        <tr>
          <th>Name</th>
          <th>Address</th>
          <th>Action</th>
        </tr>
      </thead>
      <tbody>
        <% customers.forEach(customer=> { %>
          <tr>
            <td>
              <%= customer.name %>
            </td>
            <td>
              <%= customer.address %>
            </td>
            <td class="text-end">
              <a href="/customers/new/<%= customer.id %>" class="text-decoration-none">
                <i class="bi bi-pencil-square icon-lg text-primary"></i>
              </a>
              <a href="#" data-customer-id="<%= customer.id %>" class="text-decoration-none ms-2 trigger-delete">
                <i class="bi bi-trash icon-lg text-danger"></i>
              </a>
            </td>
          </tr>
          <% }); %>
      </tbody>
    </table>

    <p>
      <a class="btn btn-primary" href="/customers/new">New Customer</a>
    </p>

    <%- include('./partials/modalDelete.ejs') %>

  </div>

  <script src="/javascript/bootstrap.bundle.min.js"></script>
</body>

</html>
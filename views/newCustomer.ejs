<!-- views/newCustomer.ejs -->
<!DOCTYPE html>
<html lang="pt-br">

<head>
  <meta charset="UTF-8">
  <title>
    <%= title %>
  </title>

  <link rel="stylesheet" href="/stylesheets/bootstrap.min.css">
</head>

<body>
  <div class="container mt-5">
    <h1 class="mb-4">
      <%= title %>
    </h1>
    <p class="mb-4">Record new customer</p>

    <form method="POST" action="/customers/new">
      <div class="mb-3">
        <label for="name" class="form-label">Name:</label>
        <input type="text" id="name" name="name" class="form-control" value="<%= customer.name %>">
      </div>

      <div class="mb-3">
        <label for="address" class="form-label">Address:</label>
        <input type="text" id="address" name="address" class="form-control" value="<%= customer.address %>">
      </div>
      <p>
        <input type="hidden" name="id" value="<%= customer.id %>">
      </p>

      <button type="submit" class="btn btn-success me-2">Register</button>
      <a href="/customers" class="btn btn-secondary">Cancel</a>
    </form>
    <%- include('./partials/modalError.ejs') %>
  </div>

  <script src="/javascript/bootstrap.bundle.min.js"></script>
</body>

</html>